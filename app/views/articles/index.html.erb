<h1>Articles inventory</h1>

<div class="d-flex justify-content-between align-items-center">
  <ul>
    <%= @articles.each do |element| %>
      <div class="container">       
        <h2> <%= link_to element.title, article_path(element) %> </h2>
        <br>
        <p> <%= element.content %> </p>
      </div>
    <% end %>
  </ul>
</div>

<p><%= link_to 'Create new article', new_article_path  %></p>
